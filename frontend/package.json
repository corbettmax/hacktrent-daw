{
  "name": "hacktrent-daw-frontend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-backend": "node ./scripts/build-backend.js",
    "electron:dev": "npm run build-backend && concurrently \"npm run dev\" \"wait-on http://localhost:5173 --timeout 60000 && VITE_DEV_SERVER_URL=http://localhost:5173 electron . --enable-logging\"",
    "electron:build": "npm run build && npm run build-backend && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.7",
    "@types/react": "^19.2.2",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.0",
    "concurrently": "^8.0.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.corbett.hacktrent-daw",
    "productName": "HackTrent DAW",
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/server.py",
        "to": "backend/server.py"
      },
      {
        "from": "../backend/requirements.txt",
        "to": "backend/requirements.txt"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
